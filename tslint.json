{
  "defaultSeverity": "error",
  "autoFixOnSave": true,
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-import-group-ordering",
    "tslint-react-hooks"
  ],
  "jsRules": {},
  "rules": {
    "no-console": false,
    "ordered-imports": false,
    "import-name": false,
    "object-literal-sort-keys": false,
    "no-unused-expression": false,
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "allow-snake-case"
    ],
    "max-line-length": [
      true,
      {
        "limit": 500
      }
    ],
    "member-ordering": false,
    "prefer-array-literal": false,
    "no-shadowed-variable": false,
    "import-group-ordering": {
      "severity": "warning",
      "options": {
        "imports-groups": [
          {
            "name": "types"
          }
        ],
        "matching-rules": [
//          {
//            "matches": "^(\\^types)",
//            "imports-group": "types"
//          }
        ]
      }
    },
    "react-hooks-nesting": "error"
  },
  "rulesDirectory": []
}
